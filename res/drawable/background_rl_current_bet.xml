<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_rl_current_bet"/>
            <gradient android:startColor="#19211E" android:endColor="#323B38" android:angle="90"/>
        </shape>
    </item>

    <!--top line-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_rl_current_bet"/>
            <gradient android:startColor="#3D4543" android:centerColor="@android:color/transparent" android:endColor="@android:color/transparent"
                      android:angle="-90" android:centerY="0.1"/>
        </shape>
    </item>

    <!--bottom line-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_rl_current_bet"/>
            <gradient android:startColor="#151C1A" android:centerColor="@android:color/transparent" android:endColor="@android:color/transparent"
                      android:angle="90" android:centerY="0.1"/>
        </shape>
    </item>

    <!--left line-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_rl_current_bet"/>
            <gradient android:startColor="#151C1A" android:centerColor="@android:color/transparent" android:endColor="@android:color/transparent"
                      android:angle="0" android:centerY="0.02"/>
        </shape>
    </item>

    <!--right line-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_rl_current_bet"/>
            <gradient android:startColor="#151C1A" android:centerColor="@android:color/transparent" android:endColor="@android:color/transparent"
                      android:angle="180" android:centerY="0.02"/>
        </shape>
    </item>

    <!--android:endColor="#151C1A"-->
</layer-list>