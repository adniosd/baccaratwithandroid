<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:background="@drawable/background_black_gold_stroke" android:padding="15dp">

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:indeterminateDrawable="@drawable/rotate_loader"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_size_dialog_loading"
            android:textColor="@color/gold_text"
            android:id="@+id/tvMessage_DPWM" android:text="-"/>
</LinearLayout>